<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sonatype.script.listener.plugin.dao.ScriptListenerDAO">

    <insert id="createSchema">
    CREATE TABLE IF NOT EXISTS script_listener_bundling (
      scriptname        VARCHAR(200) NOT NULL,
      eventtype        VARCHAR(200) NOT NULL

      CONSTRAINT pk_script_listener_bundling_name_event UNIQUE (scriptname, eventtype)
    );
  </insert>

  <select id="browse" resultType="ScriptListenerData">
    SELECT * FROM script_listener_bundling;
  </select>

  <insert id="create" parameterType="ScriptListenerData">
    INSERT INTO script_listener_bundling (scriptname, eventtype)
        VALUES (#{scriptname}, #{eventtype});
  </insert>

  <select id="readByEventType" resultType="ScriptListenerData">
    SELECT * FROM script_listener_bundling WHERE eventtype = #{value};
  </select>

  <select id="getScriptsNamesByEventType" resultType="String">
    SELECT scriptname FROM script_listener_bundling WHERE eventtype = #{value};
  </select>

  <delete id="deleteByScriptName">
    DELETE FROM script_listener_bundling WHERE scriptname = #{value};
  </delete>

</mapper>
